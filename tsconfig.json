{
	"extends": "@tsconfig/next/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": {
			"@/*": [
				"*"
			],
			"*": [
				""
			]
		},
		"strict": true,
		"importsNotUsedAsValues": "error",
		"target": "es2015"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx"
	],
	"exclude": [
		"node_modules/",
		".next/",
		"src/@types/generated"
	]
}